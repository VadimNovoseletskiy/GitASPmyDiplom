@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <!-- header page -->
    <div>
        <header id="header">

            <article>
                <div class="logo">
                    <img src="/Image/small_logo.JPG">
                </div>
                <div class="logo_1">
                    <img src="/Image/logo_z.jpg">
                </div>
                <div class="telephone">
                    <p>+38(067)984-80-96</p>
                    <p class="schedule"> Пн- Пт с 09:00 до 18:00 </p>
                    <p class="schedule"> (Сб-Нд по домовленності)</p>
                </div>
            </article>
        </header>
    </div>
    <!-- end header page-->
    <!-- новигация  -->
    <nav id="nav">
        <ul>
            <li>@Html.ActionLink("Головна", "Index", "Home")</li>
            <li>@Html.ActionLink("Послуги", "Services", "Home")</li>
            <li>@Html.ActionLink("Кредитування", "Kredit", "Home")</li>
            <li>@Html.ActionLink("Контактна інформація", "MyContact", "Home")</li>
            <li>@Html.ActionLink("Про Нас", "MyAbout", "Home")</li>
            <li>@Html.ActionLink("Вхід Адміністратора", "Index", "Administrator")</li>
        </ul>
    </nav>
    <!--end новигация -->


    <main id="main" role="main">

        <!-- форма выборки   -->
        <section >

            <form method="POST" action="/House/Index/">
                <p style="float: left;">
                   місце : @Html.DropDownList("Region", ViewBag.regionName as SelectList)
                    @Html.DropDownList("Village", ViewBag.villageName as SelectList)
                </p>

                <p style="float: left;">
                    <label>тип:</label>
                    <select class="house_type" type="text" name="TypeHouse" id="house_type" required>
                        <option value="будинок">будинок</option>
                        <option value="котедж">котедж</option>
                        <option value="літній будинок">літній будинок</option>
                    </select>
                </p>

                <p style="float: left;">
                    <label>частина:</label>
                    <select class="house_part" type="text" name="PartHouse" id="house_part" required>
                        <option value="1">1</option>
                        <option value="1/2">1/2</option>
                        <option value="1/3">1/3</option>
                        <option value="1/4">1/4</option>
                        <option value="1/5">1/5</option>
                        <option value="2/3">2/3</option>
                        <option value="2/5">2/5</option>
                    </select>
                </p>
                <p style="float: left;">
                    <input type="radio" name="OperationType" value="продаж" checked="checked"/><span>продаж</span>
                    <input class="nevedimkaRent" type="number" id="dol" min="1000" max="250000" placeholder="ціна в доларах" name="DollarPriceTo" size="3">
                    <input type="radio" name="OperationType" value="оренда"/><span>оренда</span>
                    <input class="nevedimkaRent" type="number" id="grn" min="1000" max="500000" placeholder="ціна в гривні " name="GrnPriceTo" size="3">
                </p>

                <p>
                    <!-- <input class="button" type="reset" name="" value="Очистити"> -->
                    <input class="buttonSearch  " style="float: right; width:50px; height: 50px; " type="image" name="submit" src="../../Image/search.png" value="Пошук">
                </p>
            </form>
        </section>
        <!--end форма выборки   -->


        @RenderBody()

    </main>
<footer id="footer">
    <article class="searchId">
        <form method="GET" action="/House/IdOutPutDetaialsInfoHouse">
            код № 
            <input type="number" name="id" />
            <input type="submit" value="пошук" />
        </form>

    </article>
    <!-- иконки социальные сети -->
    <article class="icons">
        <a href="https://www.facebook.com/ANzatyshok/" target="_blank">
            <img src="/Image/image_fb.jpg" alt="Ми на Facebook">
        </a>
    </article>
    <!-- end социальные сети-->
</footer>

</body>
</html>





@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <!-- header page -->
    <div>
        <header id="header">

            <article>
                <div class="logo">
                    <img src="/Image/small_logo.JPG">
                </div>
                <div class="logo_1">
                    <img src="/Image/logo_z.jpg">
                </div>
                <div class="logo_2">
                    <img src="/Image/photoLogo3.jpg" />
                </div>
            </article>
        </header>
    </div>
    <!-- end header page-->
    <!-- новигация  -->
    <nav id="nav">
        <ul>
            <li>@Html.ActionLink("Головна", "Index", "Home")</li>
            <li>@Html.ActionLink("Послуги", "Services", "Home")</li>
            <li>@Html.ActionLink("Кредитування", "Kredit", "Home")</li>
            <li>@Html.ActionLink("Контактна інформація", "MyContact", "Home")</li>
            <li>@Html.ActionLink("Про Нас", "MyAbout", "Home")</li>
            <li>@Html.ActionLink("Вхід Адміністратора", "Index", "Administrator")</li>
        </ul>
    </nav>
    <!--end новигация -->
    <main id="main" role="main">

        <!-- форма выборки -->


        <section >
          

            <form method="POST" action="/Land/Index" >
                <p>
                    <b style="color: red">пошук:</b>
                    @Html.DropDownList("Region", ViewBag.regionName as SelectList) 
                    @Html.DropDownList("Village", ViewBag.villageName as SelectList)
                    
                    <select name="SpecialLand" class="kategory" required>
                        <option value="">призначення</option>
                        <option value="індивідуальне">індивідуальне</option>
                        <option value="комерційне">комерційне</option>
                        <option value="сільськогосподарське">сільськогосподарське</option>і
                    </select>
                    ціна:
                    <input class="number_price" type="number" min="500" max="1000000" placeholder="ціна в доларах" name="CostTo" size="3">
                    <input class="button" type="submit" name="search" value="Пошук">
                </p>
            </form>
        </section>
        <!--end форма выборки   -->


        @RenderBody()

    </main>
<footer id="footer">
    <article class="searchId" >
        <form method="GET" action="/Land/IdOutPutDetaialsInfoLand">
            код №
            <input type="number" name="id"/>
            <input type="submit" value="пошук"/>
        </form>
       
    </article>
    <!-- иконки социальные сети -->
    <article class="icons">
        <a href="https://www.facebook.com/ANzatyshok/" target="_blank">
            <img src="/Image/image_fb.jpg" alt="Ми на Facebook">
        </a>
    </article>
    <!-- end социальные сети-->
</footer>

</body>
</html>






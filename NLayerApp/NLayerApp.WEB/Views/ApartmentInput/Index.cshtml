<h2>Квартири</h2>
<form method="POST" action="">
    <!-- ++++++++++++++++++++++++++   Адреса  ++++++++++++++++++++++++++++++++++++ -->
    <fieldset>
        <legend style="color: blue; font-size: 25px; font-style: oblique;">Адресні дані </legend>


        <!--Населені пункти -->
        <p>
            <label>Населений пункт:</label>
            <input type="text" id="village" name="Village" required />
        </p>
        <!--Райони-->
        <p>
            <label>Район:</label>
            <input type="text" id="region" name="Region" required />
        </p>
        <!--вулиця -->
        <p>
            <label>Вулиця:</label>
            <input type="text" id="street" name="Street" />
        </p>
        <!--Номер будинку-->
        <p>
            <label>Будинок № :</label>
            <input type="text" id="adress_number" name="NumberAdress" />
        </p>

        <label for="operation">Вид операції:</label>
        <select id="operation" name="OperationType">
            <option value="0">оренда</option>
            <option value="1">продаж</option>
        </select><br />
    </fieldset>

    <!-- ++++++++++++++++++++++++++++++ Детальна інформація +++++++++++++++++++++++++ -->
    <fieldset>
        <legend style="color: blue; font-size: 25px; font-style: oblique;">Детальна інформація</legend>
        <!--Стан обьекту-->
        <p>
            <label>Стан:</label>
            <select name="ConditionOfApartment">
                <option value="відмінний">відмінний</option>
                <option value="хороший">хороший</option>
                <option value="задовільний">задовільний</option>
                <option value="потрібний ремонт">потрібний ремонт</option>
                <option value="оздоблювальні роботи">оздоблювальні роботи</option>
            </select>
        </p>
        <!-- Кількість кімнат -->
        <p>
            <label>Кількість кімнат </label>
            <select name="RoomsApartment">
                <option value="1">1 кімната</option>
                <option value="2">2 кімнати</option>
                <option value="3">3 кімнати</option>
                <option value="4">4 кімнати</option>
                <option value="5">5 кімат і більше</option>
            </select>
        </p>
        <!-- тип кімнат -->
        <p>
            <label>Тип кімнат:</label>
            <select name="RoomType">
                <option value="0">роздільні</option>
                <option value="1">суміжні</option>
                <option value="2">комбіновані</option>
            </select>
        </p>
        <!-- Готовність до заселення -->
        <p>
            <label>Готовність до заселення:</label>
            <select name="ReadinessApartment">
                <option value="В єксплуатації">В єксплуатації</option>
                <option value="Новобудова">Новобудова</option>
                <option value="Будується">Будується </option>
                <option value="Вільна">Вільна</option>
            </select>
        </p>
        <!-- Санвузол -->
        <p>
            <label>Санвузол</label>
            <select name="BathRoomApartment">
                <option value="Роздільній">Роздільній</option>
                <option value="Спільний">Спільний</option>
                <option value="2 і більше">2 і більше</option>
                <option value="Відсутній">Відсутній</option>
            </select>
        </p>
        <!-- Кільксть балконів -->
        <p>
            <label>Кількість балконів</label>
            <select name="BalconyApartment">
                <option value="0">відсутні</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </p>
        <!-- Поверх -->
        <p>
            <label>Поверх:</label>
            <select name="FloorApartment ">
                <option value="-1">підвал</option>
                <option value="0">цоколь</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                
            </select>
        </p>
        <!-- зангальні кількість поверхів -->
        <p>
            <label>Загальна кількість поверхів:</label>
            <input type="number" id="float_number" name="TotalFloor" min="1" max="15" />
        </p>
        <!-- Матеріал підлоги -->
        <p>
            <label>Матеріал підлоги:</label>

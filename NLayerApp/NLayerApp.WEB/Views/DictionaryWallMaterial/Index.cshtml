@model List<NLayerApp.BusinessLogicLayer.Models.WallMaterialViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InputObjectForm.cshtml";
}

<h2>Словник назв Матеріалів для стін</h2>
<div>
    @if ((Model?.Count ?? 0) > 0)
    {
        <table border="1" cols="4">
            <tr>
                <td width=40>Id</td>
                <td>Назва матеріалу</td>
                <td>Редагувати</td>
                <td>Видалити</td>
            </tr>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.WallMaterial</td>
                    <td><a href="/DictionaryWallMaterial/Edit/@b.Id" style="">Редагувати</a></td>
                    <td><a href="/DictionaryWallMaterial/Delete/@b.Id" style="color: red">Видалити</a></td>
                </tr>
            }
            <tr>
                <td colspan="4" style="background-color:mediumslateblue" align="center"> Додати назву:</td>
            </tr>
            <tr>
                <td>Назва:</td>
                <td colspan="3">
                    <form method="POST" action="/DictionaryWallMaterial/">
                        <input type="text" name="WallMaterial" />
                        <input type="submit" value="Зберегти" />
                    </form>
                </td>
            </tr>

        </table>
    }
</div>


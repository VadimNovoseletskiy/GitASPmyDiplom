@model List<NLayerApp.BusinessLogicLayer.Models.HouseViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SearchHouseForm.cshtml";
}


<div class="idDetailsInfo">
    @if ((Model?.Count ?? 0) > 0)
    {
        <h2>Знайдені будинки</h2>
        <table class="tablCentr wd100" border="1" cols="4">
            @foreach (var b in Model)
            {
                <tr>
                    <td rowspan="4"> @b.Id</td>
                    <td rowspan="4">
                        <table width="100">
                            <tr>
                                <td>
                                    <img src="/Image/Thumbnail/@b.IdPicture" />
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td colspan="2">
                        <a href="/House/OutPutDetailsInfoHouse/@b.Id" class="captionLink"><b>@b.CaptionLink</b></a>
                    </td>
                </tr>

                <tr>
                    <td class="tx-al-c">
                        @b.OperationType, <b>
                        ціна:
                        @if (b.OperationType == "оренда")
                        {
                            @b.GrnPrice
                            <span>грн.</span>
                        }
                        else
                        {
                            @b.DollarPrice<span>у.о.</span>
                        }
                    </b>
                </td>
                <td class="tx-al-c">
                    @b.Village,@b.Region
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    тип: "@b.TypeHouse" <b class="colorBlue">|</b> кількість поверхів : @b.Floor <b class="colorBlue">|</b>
                    матеріал стін: @b.WallMaterial <b class="colorBlue">|</b> матеріал підлоги: @b.FloorMaterial <b class="colorBlue">|</b>
                    загальна площа: @b.TotalArea m<sup>2</sup>
                </td>
            </tr>


        }
        </table>
    }
    else
    {
        <div class="my_row">
            <div class="my_cols my_col-12 no-image-bg"  >
                <img src="../../Image/photo4house.jpg" />
            </div>
        </div>

    }
</div>


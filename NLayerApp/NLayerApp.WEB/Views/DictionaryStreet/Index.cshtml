@model List<NLayerApp.BusinessLogicLayer.Models.StreetViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InputObjectForm.cshtml";
}

<h2>Словник назв вулиць</h2>
<div>
    @if ((Model?.Count ??0) > 0)
    {
        <table border="1" cols="4">
            <tr>
                <td>Id</td>
                <td>Назва вулиці</td>
                <td>Редагувати</td>
                <td>Видалити</td>
            </tr>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.Street</td>
                    <td><a href="/DictionaryStreet/Edit/@b.Id" style="">Редагувати</a></td>
                    <td><a href="/DictionaryStreet/Delete/@b.Id" style="color:red">Видалити</a></td>
                </tr>
            }
            <tr>
                <td align="center" colspan="4" style="background-color: mediumpurple">Додати нову нвзву: </td>
            </tr>

            <tr>
                <td  width=40> Новий:</td>
                <td colspan="3">
                    <form method="POST" action="/DictionaryStreet/Index">
                        <input type="text" name="Street" />
                        <input type="submit" value="Зберегти" />
                    </form>
                </td>
            </tr>
        </table>
    }
    else
    {
        <table>
            <tr>
                <form method="POST" action="/DictionaryStreet/Index">
                    <table>
                        <tr>
                            <td style="color: blue">[додати першу назву]</td>
                            <td><input name="Street" type="text" /></td>
                            <td><button type="submit"><img src="/Image/add.jpg" /></button></td>
                        </tr>
                    </table>
                </form>
            </tr>
        </table>
    }
</div>


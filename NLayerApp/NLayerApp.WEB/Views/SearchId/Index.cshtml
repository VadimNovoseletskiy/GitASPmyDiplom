 @model NLayerApp.BusinessLogicLayer.Models.TotalObjectViewModel
@using NLayerApp.DataAccessLayer.Domains.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div>
    <section class="main_information">
        <h2>Детальна інформація по номеру об'яви</h2>

        @if ((Model?.Id ?? 0) > 0)
        {

            <!--Apartment-->
            if (Model.MyType == PropertyType.Apartment)
            {
                <div class="main_information">
                    <table cols="4" style="width: 720px; float: right;">
                        <tr>
                            <td colspan="4" style="text-align: center">
                                <b>@Model.CaptionLink</b>
                            </td>
                        </tr>

                        <tr>
                            <td rowspan="5">
                                <table width="100">
                                    <tr>
                                        <td>
                                            <img src="../../Image/apartment.jpg"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                        <tr>
                            <td>Тип операції:<b>@Model.OperationType</b></td>
                            <td style="text-align: right">
                                <b>
                                    Ціна:
                                    @if (Model.OperationType == "оренда")
                                    {
                                        @Model.GrnPrice<span>грн.</span>
                                    }
                                    else
                                    {
                                        @Model.DollarPrice
                                        <span>у.о.</span>
                                    }
                                </b>
                            </td>
                        </tr>

                        <tr><td colspan="2"> Населений пункт: @Model.Village</td></tr>
                        <tr><td colspan="2">Район: @Model.Region </tr>
                        <tr>
                            <td style="font-size: 18px;" colspan="3">
                                Загальна площа:<b>@Model.TotalAreaInfo m<sup>2</sup></b>
                            </td>
                        </tr>
                    </table>

                    <p>
                        <label style="color: crimson; font-size: 15px; font-style: inherit;"><b>Детальний опис:</b></label><br>
                        @Html.TextAreaFor(model => model.InfoDetails, 5, 40, new {htmlAttributes = new {@class = "form-control"}})
                    </p>

                    <table>

                        <tr> <td colspan="4" style="text-align: center; background-color:#C9D8EA"><b>Детальна інформація по квартирі</b></td></tr>
                        <tr>
                            <td>Готовність до заселення: </td>
                            <td colspan="3">@Model.ReadinessApartment</td>
                        </tr>
                        <tr>
                            <td> Стан квартири: </td>
                            <td colspan="3">@Model.ConditionOfApartment</td>
                        </tr>
                        <tr>
                            <td>Загальна кількість поверхів:</td>
                            <td colspan="3">@Model.TotalFloor</td>
                        </tr>
                        <tr>
                            <td>Поверх квартири</td>
                            <td colspan="3">@Model.FloorApartment</td>
                        </tr>
                        <tr>
                            <td>Тип кімнат:</td>
                            <td colspan="3">@Model.RoomType</td>
                        </tr>
                        <tr>
                            <td>Кількість кімнат:</td>
                            <td colspan="3">@Model.RoomsApartment</td>
                        </tr>
                        <tr>
                            <td>Тип ванної кімнати:</td>
                            <td colspan="3">@Model.BathRoomApartment</td>
                        </tr>
                        <tr>
                            <td>Наявність балкону</td>
                            <td colspan="3">@Model.BalconyApartment</td>
                        </tr>
                        <tr>
                            <td>Матеріал стін:</td>
                            <td colspan="3">@Model.WallMaterial</td>
                        </tr>
                        <tr>
                            <td>Матеріал підлоги:</td>
                            <td colspan="3">@Model.FloorMaterial</td>
                        </tr>
                        <tr>
                            <td>Площа кухні:</td>
                            <td colspan="3">@Model.KitchenAreaApartment  m<sup>2</sup></td>
                        </tr>
                        <tr>
                            <td>Житлова площа</td>
                            <td colspan="3">@Model.LivingAreaApartment m<sup>2</sup></td>
                        </tr>


                        <!--додаткове обладнання -->
                        <tr> <td colspan="4" style="background-color: #C9D8EA; text-align: center"><b>Додаткове обладнання</b></td></tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Boiler)Бойлер</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Intercom)Домофон</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.CableTv)Кабельне телебачення</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.FirePlace)Камін</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Air)Кондіціонер</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Furniture)Меблі</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Signaling)Сигналізація</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.SatelliteTv)Супутникове телебачення</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.WashingMachine)Пральна машинка</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.WashingMachine)Пральна машинка</td>
                        </tr>

                    </table>
                </div>

            }

            <!--House-->

            if (Model.MyType == PropertyType.House)
            {
                <div class="main_information">
                    <table cols="4" width="590px" style="float: left;">
                        <tr>
                            <td colspan="4" style="text-align: center; color: #037ABD;">
                                <p>
                                    <b>@Model.CaptionLink</b>
                                </p>
                            </td>
                        </tr>


                        <tr>
                            <td rowspan="5">
                                <table width="100">
                                    <tr>
                                        <td>
                                            <img src="../../Image/apartment.jpg" />
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                        <tr>
<tr>
                            <td>
                                @Model.OperationType,
                                <b>
                                    ціна:
                                    @if (Model.OperationType == "оренда")
                                    {
                                        @Model.GrnPrice
                                        <span>грн.</span>
                                    }
                                    else
                                    {
                                        @Model.DollarPrice<span>у.о.</span>
                                    }
                                </b>
                            </td>
                            <td style="float: right;">
                                код об'яви <b> № @Model.Id </b>
                            </td>

                        </tr>

                        <tr><td colspan="2">@Model.Village, @Model.Region </td></tr>
                        <tr><td colspan="2"> загальна площа: <b>@Model.TotalAreaInfo m <sup>2</sup></b></td></tr>

                        <tr>
                            <td colspan="4">
                                <label style="color: crimson; font-size: 18px; font-style: inherit"><b> Опис об'єкту:</b></label><br>
                                @Html.TextAreaFor(model => model.InfoDetails, 8, 54, new {htmlAttributes = new {@class = "form-control"}})
                            </td>
                        </tr>

                    </table>

                    <table width="490px" style="float: left;">
                        <!--детальна інформація -->
                        <tr>
                            <td colspan="4" style="text-align: center; background-color: #C9D8EA">
                                <b>Детальна інформація</b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">Готовність до заселення:</td>
                            <td colspan="2">@Model.ReadinessHouse</td>
                        </tr>
                        <tr>
                            <td colspan="2">Тип будинку:</td>
                            <td colspan="2">@Model.TypeHouse</td>
                        </tr>
                        <tr>
                            <td colspan="2">Кількість поверхів:</td>
                            <td colspan="2">@Model.FloorHouse</td>
                        </tr>
                        <tr>
                            <td colspan="2">Частина будинку:</td>
                            <td colspan="2">@Model.PartHouse</td>
                        </tr>
                        <tr>
                            <td colspan="2">Кількість кімнат:</td>
                            <td colspan="2">@Model.RoomsHouse</td>
                        </tr>
                        <tr>
                            <td colspan="2">Матеріал підлоги:</td>
                            <td colspan="2">@Model.FloorMaterial</td>
                        </tr>
                        <tr>
                            <td colspan="2">Матеріал стін:</td>
                            <td colspan="2">@Model.WallMaterial</td>
                        </tr>
                        <tr>
                            <td colspan="2"> Площа кухні:</td>
                            <td colspan="2">@Model.KitchenAreaHouse</td>
                        </tr>
                        <tr>
                            <td colspan="2">Житлова площа:</td>
                            <td colspan="2">@Model.LivingAreaHouse</td>
                        </tr>
                        <tr>
                            <td colspan="2">Площа прилягаючої земельної ділянки:</td>
                            <td colspan="2">@Model.LandAreaHouse</td>
                        </tr>

                        <!--додаткове обладнання -->
                        <tr> <td colspan="4" style="background-color: #C9D8EA; text-align: center"><b>Додаткове обладнання</b></td></tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Boiler)Бойлер</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Intercom)Домофон</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.CableTv)Кабельне телебачення</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.FirePlace)Камін</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Air)Кондіціонер</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Furniture)Меблі</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Signaling)Сигналізація</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.SatelliteTv)Супут.телеб.</td>
                        </tr>
                        <tr>
                            <td colspan="4" style="text-align: center">@Html.CheckBoxFor(model => model.WashingMachine)Пральна машинка</td>

                        </tr>
                        <tr>
                            <td><p></p></td>
                        </tr>



                        <tr>
                            <td colspan="4" style="background-color: #C9D8EA; text-align: center"><b>Надвірні побудови:</b> </td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.BahtHouse) Баня</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Swimming)Басейн</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Garage)Гараж</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Well)Колодязь</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.SummerKitchen)Літня кухня</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.WorkShop)Майстерня</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Barn)Сарай</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Well1) Скважина</td>
                        </tr>
                        <tr>
                            <td colspan="4" style="text-align: center">@Html.CheckBoxFor(model => model.GreenHouse)Теплиця</td>
                        </tr>
                        <tr>
                            <td><p></p></td>
                        </tr>

                        <!--Коммунікації-->
                        <tr>
                            <td colspan="4" style="background-color: #C9D8EA; text-align: center"><b>Коммунікації</b></td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Gas)Газ</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.Electricity)Електроенергія</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.CentralSewerage)Центр.каналізація</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.AutonomousSewerage)Авт.каналізація</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.CentralWater)Центр.водопостачання</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.AutonomousWater)Авт.водопост.</td>
                        </tr>
                        <tr>
                            <td colspan="2">@Html.CheckBoxFor(model => model.CentralHeating)Центральне отоплення</td>
                            <td colspan="2">@Html.CheckBoxFor(model => model.AutonomusHeating)Авт.опалення </td>
                        </tr>
                        <tr>
                            <td colspan="4" style="text-align: center">@Html.CheckBoxFor(model => model.RailWay)Залізнична дорога</td>
                        </tr>
                        <tr>
                            <td><p></p></td>
                        </tr>

                    </table>
                </div>
                
            }

            <!--Commercial -->
            if (Model.MyType == PropertyType.Commercial)
            {
                <div class="main_information">
                    
                </div>
            }

            <!--Land -->
            if (Model.MyType == PropertyType.Land)
            {
                <p> детальная информация по ком недвижимости </p>
            }


        }

        else
        {
            <div class="resultSearchId">
                <p>Об'єкт з таким Id за результатами пошуку відсутній </p>
            </div>
        }
    </section>
</div>



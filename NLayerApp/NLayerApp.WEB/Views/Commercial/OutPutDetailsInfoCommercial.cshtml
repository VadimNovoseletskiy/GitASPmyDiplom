@model NLayerApp.BusinessLogicLayer.Models.CommercialDetailsViewModel
@{
    ViewBag.Title = "OutPutDetailsInfoCommercial";
    Layout = "~/Views/Shared/_SearchCommercialForm.cshtml";
}

<div class="my_container">


</div>


<div class="idDetailsInfo">
    @if ((Model?.Id ?? 0) > 0)
    {
        <h2>Детальна інформація по об'єкту комерційної нерухомості</h2>
        <table cols="4" class="wd100">
            <tr>
                <td colspan="4" class="captionName">
                    <p><b>@Model.CaptionLink</b></p>
                </td>
            </tr>
            <tr>
                <td rowspan="4">
                    <table width="100">
                        <tr>
                            <td>
                                <img src="/Image/Thumbnail/@Model.IdPicture" />
                            </td>
                        </tr>
                    </table>
                </td>

            </tr>

            <tr>
                <td>  @Model.OperationType, <b>
                        ціна:

                        @if (Model.OperationType == "оренда")
                        {
                            @Model.GrnPrice <span>грн.</span>
                        }
                        else
                        {
                            @Model.DollarPrice <span>у.о.</span>
                        }
                    </b>
                </td>
                <td class="tx-al-r">  код об'яви <b> № @Model.Id </b></td>
            </tr>

            <tr><td colspan="2"> @Model.Village  ,  @Model.Region  </td></tr>
            <tr>
                <td  colspan="3">
                    загальна площа:  <b>@Model.TotalArea m <sup>2</sup></b>
                </td>
            </tr>
        </table>
        <p>
            <label class="descriptiObj"><b class="colorRed"> Опис об'єкту:</b></label><br>
            @Html.TextAreaFor(model => model.InfoDetails, 4, 115, new { htmlAttributes = new { @class = "form-control" } })
        </p>
        <table class="wd60">
            <!--детальна інформація -->
            <tr>
                <td colspan="4" class="bg-col-table tx-al-c">
                    <b>Детальна інформація</b>
                </td>
            </tr>
            <tr>
                <td colspan="2">Тип комерційної нерухомості:</td>
                <td colspan="2">@Model.TypeCommercial</td>
            </tr>
            <tr>
                <td colspan="2">Стан:</td>
                <td colspan="2">@Model.StateCommercial</td>
            </tr>
            <tr>
                <td colspan="2">Загальна кількість поверхів:</td>
                <td colspan="2">@Model.TotalFloorCommercial</td>
            </tr>
            <tr>
                <td colspan="2">Поверх:</td>
                <td colspan="2">@Model.FloorCommercial</td>
            </tr>
            <tr>
                <td colspan="2">Ефективна площа використання </td>
                <td colspan="2">@Model.EffectiveAreaCommercial m<sup>2</sup></td>
            </tr>
            <tr>
                <td colspan="2">Матеріал підлоги:</td>
                <td colspan="2">@Model.FloorMaterial</td>
            </tr>
            <tr>
                <td colspan="2">Матеріал стін:</td>
                <td colspan="2">@Model.WallMaterial</td>
            </tr>
            <tr>
                <td colspan="2"> Площа прилягаючої земельної ділянк:</td>
                <td colspan="2">@Model.LandAreaCommercial Га</td>
            </tr>
           

            <!--додаткове обладнання -->
            <tr> <td colspan="4" class="bg-col-table tx-al-c"><b>Додаткове обладнання</b></td></tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.Boiler)Бойлер</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.Intercom)Домофон</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.CableTv)Кабельне телебачення</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.FirePlace)Камін</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.Air)Кондіціонер</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.Furniture)Меблі</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.Signaling)Сигналізація</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.SatelliteTv)Супутникове телебачення</td>
            </tr>
            <tr>
                <td colspan="4" class="tx-al-c">@Html.CheckBoxFor(model => model.WashingMachine)Пральна машинка</td>

            </tr>
            <tr>
                <td><p></p></td>
            </tr>
            

            <!--Коммунікації-->
            <tr>
                <td colspan="4" class="bg-col-table tx-al-c"><b>Коммунікації</b></td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.Gas)Газ</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.Electricity)Електроенергія</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.CentralSewerage)Центральна каналізація</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.AutonomousSewerage)Автономна каналізація</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.CentralWater)Центральне водопостачання</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.AutonomousWater)Автономне водопостачання</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.CentralHeating)Центральне отоплення</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.AutonomusHeating)Автономне опалення </td>
            </tr>
            <tr>
                <td colspan="4" class="tx-al-c">@Html.CheckBoxFor(model => model.RailWay)Залізнична дорога</td>
            </tr>
            <tr>
                <td><p></p></td>
            </tr>

        </table>




    }

</div>




@model List<NLayerApp.BusinessLogicLayer.Models.CommercialViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SearchCommercialForm.cshtml";
}

<h2>Знайдені обєкти комерційної нерухомості</h2>
<div>
    @if ((Model?.Count ?? 0) > 0)
    {
        //когда просто открывается страница (метода ж два, а вьюха одна) то модель пустая а ты это не обработал
        //это то же что если то что в скобках считать за метод то это тоже что и:
        //if (Model != null)
        //{
        //    return Model.Count;
        //}
        //return 0;
        //или Model != null ? Model.Count : 0;
        <table border="1" cols="4" width="auto">

            <tr>
                <td width="30">
                    <p>Id </p>
                </td>

                <td colspan="3">
                    <p style="text-align: center">Інформація</p>
                </td>
            </tr>

            @foreach (var b in Model)
            {
                <tr>
                    <td rowspan="5">@b.Id</td>
                    <td rowspan="5">
                        <table width="100">
                            <tr>
                                <td>
                                    <img src="../../Image/commercial.jpg" />
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td colspan="2">
                        <a href="/Commercial/OutPutDetailsInfoCommercial/@b.Id" style="font-size: 17px; text-align: center"><b>@b.CaptionLink</b></a>
                    </td>
                </tr>

                <tr>
                    <td>тип операції :<b> @b.OperationType </b> </td>
                    <td style="text-align: right">ціна:<b>@b.GrnPrice грн. (@b.DollarPrice у.о.)</b></td>
                </tr>

                <tr><td colspan="2">@b.Village</td></tr>
                <tr><td colspan="2">@b.Region | стан:<b> @b.StateCommercial  </b> </td></tr>
                <tr>
                    <td  colspan="3">
                        загальна площа:<b>  @b.TotalArea m<sup>2</sup>  </b>
                    </td>

                </tr>
            }
        </table>
    }

</div>



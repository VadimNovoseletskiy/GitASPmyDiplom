@model NLayerApp.DataAccessLayer.Domains.Models.Region
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_InputObjectForm.cshtml";
}

<h2>Редагування</h2>
<div>
    <h3> Назва району:</h3>
    <form method="POST" action="/DictionatyRegion/Edit">
        <input type="hidden" value="@Model.Id" name="Id"/>
        <input type="text" value="@Model.RegionName" name="RegionName"/>
        
        <input type="submit" value="Сохранить"/>
    </form>
</div>


<div style="margin-top: 50px; margin-bottom: 20px">
    @Html.ActionLink("Повернутися до списку районів", "Index")
</div>



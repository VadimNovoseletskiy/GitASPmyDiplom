@model NLayerApp.BusinessLogicLayer.Models.LandDetailsInfoViewModel
@{
    ViewBag.Title = "OutPutDetailsInfoLand";
    Layout = "~/Views/Shared/_SearchLandForm.cshtml";
}


<div>
    @if ((Model?.Id ?? 0) > 0)
    {
        //когда просто открывается страница (метода ж два, а вьюха одна) то модель пустая а ты это не обработал
        //это то же что если то что в скобках считать за метод то это тоже что и:
        //if (Model != null)
        //{
        //    return Model.Count;
        //}
        //return 0;
        //или Model != null ? Model.Count : 0;
        <h2>Детальна інформація по земельній ділянці</h2>
        <table  style="width: 720px" cols="4">
            <tr>
                <td rowspan="5">@Model.Id</td>
                <td rowspan="5">
                    <table width="100">
                        <tr>
                            <td>
                                <img src="../../Image/land.jpg"/>
                            </td>
                        </tr>
                    </table>
                </td>
                <td colspan="2">
                    <b> @Model.CaptionLink</b>
                </td>
            </tr>

            <tr>
                <td>Тип операції:<b>@Model.OperationType</b></td>
                <td style="text-align: right">ціна:<b>@Model.DollarPrice у.о.</b></td>
            </tr>

            <tr><td colspan="2">Населений пункт: @Model.Village</td></tr>
            <tr><td colspan="2">Район : @Model.Region</td></tr>
            <tr>
                <td colspan="3">
                    загальна площа:<b>@Model.LandArea Га</b>
                </td>
            </tr>
        </table>

          <table>
                <p>
                    <label style="color: crimson; font-size: 15px; font-style: inherit;"><b>Детальний опис:</b></label><br>
                    @Html.TextAreaFor(model => model.InfoDetails, 5, 40, new {htmlAttributes = new {@class = "form-control"}})
                </p>
         </table>
        <table>

            <tr> <td colspan="4" style="text-align: center; background-color:#C9D8EA"><b>Детальна інформація по земельній ділянці</b></td></tr>
            <tr>
                <td>Призначення земельної ділянки: </td>
                <td colspan="3">@Model.TypeLand</td>
            </tr>
           


            <!--додаткове обладнання -->
            <tr> <td colspan="4" style="background-color: #C9D8EA; text-align: center"><b>Комунікації</b></td></tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.Gas)Газ</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.RailWay)Залізнична колія</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.CentralSewerage)Центральна каналізація</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.CentralHeating)Центральне опалення</td>
            </tr>
            <tr>
                <td colspan="2">@Html.CheckBoxFor(model => model.CentralWater)Центральне водопостачання</td>
                <td colspan="2">@Html.CheckBoxFor(model => model.Electricity)Електронергія</td>
            </tr>
           

        </table>
    }
</div>



@model List<NLayerApp.BusinessLogicLayer.Models.LandViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SearchLandForm.cshtml";
}


<div>
    @if ((Model?.Count ?? 0) > 0)
    {
        //когда просто открывается страница (метода ж два, а вьюха одна) то модель пустая а ты это не обработал
        //это то же что если то что в скобках считать за метод то это тоже что и:
        //if (Model != null)
        //{
        //    return Model.Count;
        //}
        //return 0;
        //или Model != null ? Model.Count : 0;
        <h2>Знайдені земельні ділянки </h2>
        <table class="tablCentr wd100" border="1" cols="4" >

            @foreach (var b in Model)
            {
                <tr>
                    <td rowspan="5"> @b.Id</td>
                    <td rowspan="5">
                        <table>
                            <tr>
                                <td>
                                    <img src="../../Image/land.jpg"/>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td colspan="3">
                        <a href="/Land/OutPutDetailsInfoLand/@b.Id " class="captionLink"><b>@b.CaptionLink</b></a>
                    </td>
                </tr>

                <tr>
                    <td class="tx-al-c" colspan="2">@b.OperationType, ціна:<b>@b.DollarPrice ( у.о.)</b></td>
                    <td class="tx-al-c" colspan="2">@b.Village,    @b.Region</td>
                </tr>

               <tr >
                    <td colspan="4">
                        кадастровий № <b> @b.CadastraNumber</b>
                        <b class="colorBlue">|</b>
                        призначення: @b.SpecialLand
                        <b class="colorBlue">|</b>
                        загальна площа:<b>@b.TotalAreaInfo Га</b>
                    </td>
               </tr>
            }
        </table>
    }
    else
    {
        <div>
            <img src="../../Image/photo4Land.jpg" />
        </div>
    }
</div>




@model  List<NLayerApp.BusinessLogicLayer.Models.AdminHouseViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InputObjectForm.cshtml";
}


<h2>Загальний список обєктів "Будинки"</h2>

<div>
    @if ((Model?.Count ?? 0) > 0)
    {
        <table border="1" cols="8">
            <tr>
                <td width="40"><b>Id</b></td>
                <td><b>тип операції</b></td>
                <td><b>населений пункт</b></td>
                <td><b>вулиця</b></td>
                <td><b>будинок №</b></td>
                <td><b>зображення</b></td>
                <td class="colorRed"><b>редагування</b> </td>
                <td class="colorRed"><b>видалення </b></td>
            </tr>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.OperationType</td>
                    <td>@b.Village</td>
                    <td>@b.Street</td>
                    <td>@b.AddressNumber</td>
                    <td><a href="/AdminImage/Index/@b.Id" class="colorBlue">[додати]</a></td>
                    <td><a href="/AdminHouse/Edit/@b.Id" class="colorRed">[редагувати]</a></td>
                    <td><a href="/AdminHouse/Delete/@b.Id" class="colorRed">[видалити]</a></td>
                </tr>
            }
            <tr>
                <td colspan="8" class="bgMediumpurple"> Додати новий: </td>
            </tr>
            <tr>
                <td colspan="8" class="bgOrange">
                    <form method="Get" action="/AdminHouse/MyInsert">
                        <input type="submit" value="Додати новий обьєкт" />
                    </form>
                </td>
            </tr>
        </table>
    }
    else
    {
        <table>
            <tr>
                <td><a href="/AdminHouse/MyInsert"><img src="/Image/add.jpg" /></a></td>
                <td class="colorBlue">[додати перший об'єкт]</td>
            </tr>
        </table>
    }
</div>


